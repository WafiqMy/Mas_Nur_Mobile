<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/headerLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="#DEEDEC"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <!-- ðŸ”µ Profil -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/iconProfil"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/profile"
            android:contentDescription="Profil" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profil"
            android:textSize="10sp"
            android:textColor="#000000"
            android:gravity="center" />
    </LinearLayout>

    <!-- Spacer -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- ðŸ•Œ Logo Masjid -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/logoMasjid"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_masjid"
            android:contentDescription="Logo Masjid" />

        <TextView
            android:id="@+id/namaMasjid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masjid Besar Nurul Huda"
            android:textSize="12sp"
            android:textColor="#000000"
            android:gravity="center" />
    </LinearLayout>

    <!-- Spacer -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- ðŸ”” Notifikasi -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/iconNotifikasi"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/notifikasi"
            android:contentDescription="Notifikasi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifikasi"
            android:textSize="10sp"
            android:textColor="#000000"
            android:gravity="center" />
    </LinearLayout>
</LinearLayout>