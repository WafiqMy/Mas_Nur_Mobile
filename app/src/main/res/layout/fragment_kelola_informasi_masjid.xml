<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Judul Halaman -->
        <TextView
            android:id="@+id/tvTitle"
            android:text="Informasi Masjid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textAlignment="center"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="40dp"/>

        <!-- Gambar Masjid -->
        <ImageView
            android:id="@+id/imgSejarah"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="12dp"
            android:background="@drawable/fragment_container_bg"/>

        <!-- Tombol Ubah Gambar -->
        <Button
            android:id="@+id/btnUbahGambar"
            android:text="Ubah Gambar"
            android:textColor="#000000"
            android:backgroundTint="#E0EFEE"
            android:layout_width="match_parent"
            android:background="@drawable/bg_button_login"
            android:layout_height="50dp"
            android:layout_marginBottom="24dp"/>

        <!-- Label Judul -->
        <TextView
            android:text="Judul"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <!-- Input Judul -->
        <EditText
            android:id="@+id/edtJudul"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:textSize="14sp"
            android:hint="Masukkan judul sejarah"
            android:layout_marginBottom="16dp"/>

        <!-- Label Deskripsi -->
        <TextView
            android:text="Deskripsi"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <!-- Input Deskripsi -->

        <!-- Tombol Aksi -->
        <EditText
            android:id="@+id/edtDeskripsi"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="32dp"
            android:gravity="top|start"
            android:hint="Tuliskan deskripsi sejarah masjid"
            android:padding="10dp"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2">

            <Button
                android:id="@+id/btnKembali"
                android:text="Kembali"
                android:backgroundTint="#E5D3C4"
                android:textColor="#000000"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:background="@drawable/bg_button_kembali"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnSimpanPerubahan"
                android:text="Simpan Perubahan"
                android:backgroundTint="#E0EFEE"
                android:textColor="#000000"
                android:background="@drawable/bg_button_login"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
