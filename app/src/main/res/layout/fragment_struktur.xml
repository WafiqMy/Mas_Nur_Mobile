<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Judul dan Gambar Struktur Pengurus -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Struktur Pengurus"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="24dp"
            android:gravity="center" />

        <FrameLayout
            android:id="@+id/frameStrukturPengurus"
            android:layout_width="match_parent"
            android:layout_height="249dp"
            android:background="@drawable/fragment_container_bg"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/imgStrukturPengurus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Gambar Struktur Pengurus" />

            <TextView
                android:id="@+id/txtNoImagePengurus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Tidak ada gambar"
                android:textSize="16sp"
                android:textColor="#555555"
                android:visibility="gone" />
        </FrameLayout>

        <!-- Judul dan Gambar Struktur Remas -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Struktur Remas"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="32dp"
            android:gravity="center" />

        <FrameLayout
            android:id="@+id/frameStrukturRemas"
            android:layout_width="match_parent"
            android:layout_height="249dp"
            android:background="@drawable/fragment_container_bg"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/imgStrukturRemas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Gambar Struktur Remas" />

            <TextView
                android:id="@+id/txtNoImageRemas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Tidak ada gambar"
                android:textSize="16sp"
                android:textColor="#555555"
                android:visibility="gone" />
        </FrameLayout>

        <!-- Tombol -->
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnUbahStruktur"
                android:text="Ubah Gambar Struktur Organisasi"
                android:backgroundTint="#BFE0DA"
                android:textColor="@color/colortextButton"
                android:background="@drawable/bg_button_login"
                android:layout_width="290dp"
                android:layout_height="60dp" />

            <Button
                android:id="@+id/btnHapusStruktur"
                android:text="Hapus Gambar Struktur Organisasi"
                android:textColor="@color/colortextButton"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_hapus"
                android:layout_width="290dp"
                android:layout_height="60dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>