<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Judul Halaman -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah Acara"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <!-- Card Upload Gambar Utama -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="20dp">

            <!-- âœ… ID INI SUDAH DITAMBAHKAN -->
            <LinearLayout
                android:id="@+id/layout_upload_poster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:background="#F0F0F0"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/imgPreview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    android:contentDescription="Preview Gambar" />

                <LinearLayout
                    android:id="@+id/layoutPlaceholder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/kalender"
                        app:tint="#A0A0A0"
                        android:contentDescription="Tambahkan Gambar" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Klik untuk upload gambar utama"
                        android:textColor="#A0A0A0"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Input Judul -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Judul *"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/et_judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pengajian Rutin"
            android:padding="12dp"
            android:background="@drawable/bg_card_top_rounded"
            android:singleLine="true"
            android:layout_marginBottom="16dp" />

        <!-- Input Lokasi -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lokasi *"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/et_lokasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masjid Al-Hikmah"
            android:padding="12dp"
            android:background="@drawable/bg_card_top_rounded"
            android:singleLine="true"
            android:layout_marginBottom="16dp" />

        <!-- Input Tanggal -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal *"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/et_tanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="2025-12-15 (YYYY-MM-DD)"
            android:padding="12dp"
            android:background="@drawable/bg_card_top_rounded"
            android:singleLine="true"
            android:layout_marginBottom="16dp" />

        <!-- Input Deskripsi -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deskripsi *"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/et_deskripsi"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="Pengajian ini diadakan untuk..."
            android:padding="12dp"
            android:gravity="top|start"
            android:background="@drawable/bg_card_top_rounded"
            android:layout_marginBottom="16dp" />

        <!-- Dokumentasi -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dokumentasi (Upload Foto)"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnTambahDokumentasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah Foto Dokumentasi"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp" />

        <!-- Container untuk preview dokumentasi -->
        <LinearLayout
            android:id="@+id/layoutDokumentasiContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp" />

        <!-- Input Video URLs -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="URL Video (opsional)"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/et_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="https://youtu.be/abc"
            android:padding="12dp"
            android:background="@drawable/bg_card_top_rounded"
            android:singleLine="false"
            android:layout_marginBottom="24dp" />

        <!-- Tombol Unggah -->
        <Button
            android:id="@+id/btnUnggah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unggah"
            android:textColor="#1E1F22"
            android:textSize="16sp"
            android:background="@drawable/bg_button_login"
            android:paddingStart="36dp"
            android:paddingEnd="36dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:minWidth="0dp"
            android:minHeight="0dp" />

    </LinearLayout>
</ScrollView>