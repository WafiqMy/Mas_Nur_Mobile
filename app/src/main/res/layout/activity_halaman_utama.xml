<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".Fitur_Halaman_Utama.Halaman_Utama_Activity">

    <!-- ðŸ”· HEADER -->
    <include layout="@layout/header" />

    <!-- ðŸ”½ KONTEN -->
    <ScrollView
        android:id="@+id/beritaContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="24dp">

            <!-- Judul Halaman -->
            <TextView
                android:id="@+id/newsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Halaman Utama"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#000000"
                android:layout_marginBottom="12dp"/>

            <!-- ðŸ”¸ STATUS PEMESANAN TERBARU -->
            <TextView
                android:id="@+id/status_section_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status Pemesanan Terbaru"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginTop="16dp" />

            <!-- Card 1: Pemesanan Gedung -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_gedung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/status_1_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="1. Pemesanan Gedung"
                        android:textSize="16sp"
                        android:textColor="#0066CC"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/btn_lihat_1"/>

                    <TextView
                        android:id="@+id/status_1_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Atas Nama: -"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintTop_toBottomOf="@id/status_1_title"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <Button
                        android:id="@+id/btn_lihat_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lihat"
                        android:textColor="@color/colortextButton"
                        android:background="@drawable/bg_button_kembali"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        app:layout_constraintTop_toTopOf="@id/status_1_title"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 2: Permintaan Alat -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_alat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/status_2_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="2. Permintaan Alat"
                        android:textSize="16sp"
                        android:textColor="#996600"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/btn_lihat_2"/>

                    <TextView
                        android:id="@+id/status_2_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Atas Nama: -"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintTop_toBottomOf="@id/status_2_title"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <Button
                        android:id="@+id/btn_lihat_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lihat"
                        android:textColor="@color/colortextButton"
                        android:background="@drawable/bg_button_kembali"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        app:layout_constraintTop_toTopOf="@id/status_2_title"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Placeholder jika tidak ada data -->
            <TextView
                android:id="@+id/tv_no_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tidak ada permintaan menunggu"
                android:textSize="14sp"
                android:textColor="#888888"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:visibility="gone"/>

            <!-- ðŸ”¸ GRID MENU -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:alignmentMode="alignMargins"
                android:layout_marginTop="24dp"
                android:useDefaultMargins="true">

                <!-- Acara -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="180dp"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/kalender"
                            tools:ignore="ContentDescription"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Acara"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"
                            android:textAlignment="center"/>

                        <Button
                            android:id="@+id/btn_acara"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="Kelola"
                            android:textSize="14sp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/bg_button_login"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Informasi Masjid -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="180dp"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/info"
                            tools:ignore="ContentDescription"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Informasi Masjid"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"
                            android:textAlignment="center"/>

                        <Button
                            android:id="@+id/btn_informasi"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="Kelola"
                            android:textSize="14sp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/bg_button_login"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Pemesanan -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="180dp"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/square"
                            tools:ignore="ContentDescription"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pemesanan"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"
                            android:textAlignment="center"/>

                        <Button
                            android:id="@+id/btn_pemesanan"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="Kelola"
                            android:textSize="14sp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/bg_button_login"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Berita -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="180dp"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/paper"
                            tools:ignore="ContentDescription"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Berita"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"
                            android:textAlignment="center"/>

                        <Button
                            android:id="@+id/btn_berita"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="Kelola"
                            android:textSize="14sp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/bg_button_login"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </GridLayout>

        </LinearLayout>
    </ScrollView>

    <!-- ðŸ”· FOOTER -->
    <include layout="@layout/footer" />

</LinearLayout>