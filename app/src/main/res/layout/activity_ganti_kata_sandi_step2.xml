<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- KONTEN -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Judul -->
        <TextView
            android:id="@+id/txtJudul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ganti Kata Sandi"
            android:gravity="center"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp" />

        <!-- Input Password Baru -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Masukkan Kata Sandi Baru"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_input_field"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_password_baru"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Minimal 6 karakter"
                android:inputType="textPassword"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_toStartOf="@id/btnTogglePasswordBaru" />

            <ImageButton
                android:id="@+id/btnTogglePasswordBaru"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Lihat kata sandi baru"
                android:src="@drawable/ic_eye_off"
                app:tint="@android:color/darker_gray" />

        </RelativeLayout>

        <!-- Input Verifikasi -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verifikasi Kata Sandi Baru"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_input_field"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_verifikasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ulangi kata sandi"
                android:inputType="textPassword"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_toStartOf="@id/btnToggleVerifikasi" />

            <ImageButton
                android:id="@+id/btnToggleVerifikasi"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Lihat verifikasi kata sandi"
                android:src="@drawable/ic_eye_off"
                app:tint="@android:color/darker_gray" />

        </RelativeLayout>
    </LinearLayout>

    <!-- TOMBOL SIMPAN DI BAWAH -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp">

        <Button
            android:id="@+id/btn_simpan"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:text="Simpan"
            android:textColor="@color/colortextButton"
            android:background="@drawable/bg_button_kembali"
            android:textAllCaps="false"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- FOOTER -->
    <include layout="@layout/footer" />

</LinearLayout>