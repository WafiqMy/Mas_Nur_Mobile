<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9F3F3"
    tools:context=".Fitur_Masuk.SandiBaru">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="28dp"
            android:background="@drawable/bg_overlay">

            <!-- Judul -->
            <TextView
                android:id="@+id/tvJudul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="28dp"
                android:text="Buat Kata Sandi Baru"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <!-- Label + Input Kata Sandi Baru -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masukan Kata Sandi Baru"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_marginBottom="6dp"/>

            <EditText
                android:id="@+id/edtPasswordBaru"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:background="@drawable/bg_input_field"
                android:paddingHorizontal="16dp"
                android:textColorHint="#888888"
                android:layout_marginBottom="16dp"/>

            <!-- Label + Input Verifikasi Kata Sandi -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verifikasi Kata Sandi Baru"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_marginBottom="6dp"/>

            <EditText
                android:id="@+id/edtVerifikasiPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:background="@drawable/bg_input_field"
                android:paddingHorizontal="16dp"
                android:textColorHint="#888888"
                android:layout_marginBottom="24dp"/>

            <!-- Tombol Lanjut -->
            <Button
                android:id="@+id/btnLanjut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#66BBAA"
                android:paddingVertical="12dp"
                android:text="Lanjut"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                app:cornerRadius="8dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
