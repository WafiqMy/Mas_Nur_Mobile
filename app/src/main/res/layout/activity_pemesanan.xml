<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- ðŸ”½ HEADER BAR DENGAN ICON KEMBALI DAN JUDUL -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#FFFFFF">

        <!-- Icon kembali di kiri -->
        <ImageView
            android:id="@+id/btnKembali"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_kembali"
            android:contentDescription="Kembali"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="4dp" />

        <!-- Judul di tengah -->
        <TextView
            android:id="@+id/txtpemesanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pemesanan"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <!-- ðŸ”½ BUTTON PILIHAN -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPemesanan"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:text="Pemesanan"
            android:textColor="@color/colortextButton"
            android:background="@drawable/bg_button_login"
            android:textAllCaps="false"
            android:textSize="15sp"/>

        <View
            android:layout_width="20dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/btnKelolaPemesanan"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:text="Kelola Pemesanan"
            android:textColor="@color/colortextButton"
            android:background="@drawable/bg_button_login"
            android:textAllCaps="false"
            android:textSize="15sp"/>
    </LinearLayout>

    <!-- ðŸ”½ FRAME LAYOUT UNTUK FRAGMENT -->
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#EEEEEE" />

    <!-- ðŸ”» FOOTER -->
    <include layout="@layout/footer" />

</LinearLayout>